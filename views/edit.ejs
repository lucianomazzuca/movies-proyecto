<!DOCTYPE html>
<html>
  <%- include('partials/head') %> 
  <body>

    <%- include('partials/header') %>

    <div class="container">
        <h2>Editar Película</h2>
      
        <form action="" method="POST">
            <div class="form-group">
                <label for="title">Titulo</label>
                <input type="text" name="title" required value="<%- pelicula.title %> ">
            </div>
            <div class="form-group">
                <label for="rating">Rating</label>
                <input type="text" name="rating" value="<%- pelicula.rating %>">
            </div>
            <div class="form-group">
                <label for="awards">Premios</label>
                <input type="text" name="awards" value="<%- pelicula.awards %>">
            </div>
            <div class="form-group">
                <label for="release">Fecha de estreno</label>
                <input type="date" name="release" value="<%- pelicula.release_date %>">
            </div>
            <div class="form-group">
                <label for="lenght">Duración</label>
                <input type="text" name="lenght" value="<%- pelicula.length %>">
            </div>

            <button type="submit">Editar</button>
        </form>
        
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
